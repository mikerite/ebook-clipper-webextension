{
  "manifest_version": 2,

  "name": "eBook Clipper",
  "version": "0.9",
  "description": "Create ebooks from page clippings.",

  "permissions": [
    "<all_urls>",
    "activeTab",
    "downloads"
  ],

  "background": {
    "scripts": ["background.js"]
  },

  "sidebar_action": {
    "default_title": "eBook Clipper",
    "default_icon": "icons/scissors.svg",
    "default_panel": "sidebar.html"
  }
}
